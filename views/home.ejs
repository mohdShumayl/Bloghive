<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>BlogHive</title>
  <style>
    body {
      background: linear-gradient(135deg, #ffffff, #000000);
      min-height: 100vh;
    }

    .blog-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .card {
      border: none;
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px) scale(1.03);
      box-shadow: 0 10px 25px rgba(255, 165, 0, 0.6); /* Orange glow */
    }

    .card img {
      height: 200px;
      object-fit: cover;
    }

    .btn {
      background: orange;
      color: white;
      border-radius: 8px;
      transition: background 0.3s ease;
    }

    .btn:hover {
      background: darkorange;
      color: #fff;
    }
  </style>
</head>

<body>

  <div class="container-fluid" style="padding: 0;">
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="blog-container">
        <% blogs.forEach(blog => { %>
          <div class="card">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="cover image">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn">View</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts.js') %>

</body>

</html>
